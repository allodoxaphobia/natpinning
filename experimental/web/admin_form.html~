<script>

function runTests(){
	server = document.getElementById("rem_server").value;
	myip = document.getElementById("vic_ip").value;
	thirdip = document.getElementById("third_ip").value;	
	document.getElementById("iframe-tests").src="/tests?server="+ server+ "&victimip="+myip+"&thirdip="+thirdip;
	alert('done');
}
</script>

	<br>Exploit server ip: <input type="text" id="rem_server" value="$server$">
	<br>Victim LAN ip:<input type="text" id="vic_ip" value="">
	<br>Third Host IP (optional, ip of third party on same LAN): <input type="text" id="third_ip" value="0.0.0.0">
	<br><input type="button" value="Run Rests" onClick="runTests();"/>
</form>
